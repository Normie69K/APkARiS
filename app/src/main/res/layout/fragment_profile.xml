<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/android:windowBackground"
    tools:context=".fragements.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivProfileIcon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="?attr/android:textColorPrimary" />

        <TextView
            android:id="@+id/tvUserName"
            style="@style/MyScreenTitle"
            android:layout_width="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/ivEditName"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivProfileIcon"
            tools:text="User Name" />

        <ImageView
            android:id="@+id/ivEditName"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_edit"
            app:layout_constraintBottom_toBottomOf="@+id/tvUserName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvUserName"
            app:layout_constraintTop_toTopOf="@+id/tvUserName"
            app:tint="?attr/colorPrimary" />

        <TextView
            android:id="@+id/tvUserEmail"
            style="@style/MyBodyText"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvUserName"
            tools:text="user@email.com" />

        <TextView
            android:id="@+id/titleDeviceInfo"
            style="@style/MySectionTitle"
            android:layout_width="0dp"
            android:layout_marginTop="32dp"
            android:gravity="start"
            android:text="Device Information"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvUserEmail" />

        <TextView
            android:id="@+id/tvDeviceModel"
            style="@style/MyBodyText.Primary"
            android:layout_width="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleDeviceInfo"
            tools:text="Model: Pixel 7 Pro" />

        <TextView
            android:id="@+id/tvDeviceManufacturer"
            style="@style/MyBodyText.Primary"
            android:layout_width="0dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDeviceModel"
            tools:text="Manufacturer: Google" />

        <TextView
            android:id="@+id/tvAndroidVersion"
            style="@style/MyBodyText.Primary"
            android:layout_width="0dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDeviceManufacturer"
            tools:text="Android Version: 13" />

        <TextView
            android:id="@+id/tvIMEI"
            style="@style/MyBodyText.Primary"
            android:layout_width="0dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvAndroidVersion"
            tools:text="Device ID: a1b2c3d4e5f6" />

        <TextView
            android:id="@+id/tvUserPhone"
            style="@style/MyBodyText.Primary"
            android:layout_width="0dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvIMEI"
            tools:text="Phone: +91 9876543210" />

        <TextView
            android:id="@+id/tvSimOperator"
            style="@style/MyBodyText.Primary"
            android:layout_width="0dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvUserPhone"
            tools:text="SIM Operator: Airtel" />

        <TextView
            android:id="@+id/tvBatteryLevel"
            style="@style/MyBodyText.Primary"
            android:layout_width="0dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSimOperator"
            tools:text="Battery: 85%" />

        <TextView
            android:id="@+id/tvStorageInfo"
            style="@style/MyBodyText.Primary"
            android:layout_width="0dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvBatteryLevel"
            tools:text="Storage: 50.5 GB free / 128 GB" />

        <Button
            android:id="@+id/btnLogout"
            style="@style/MyPrimaryButton"
            android:layout_width="0dp"
            android:layout_marginTop="32dp"
            android:text="Logout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvStorageInfo" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>