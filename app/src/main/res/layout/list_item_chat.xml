<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/status_box_background"
    android:padding="16dp">

        <ImageView
            android:id="@+id/iv_chat_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chat_bubble"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="?attr/android:textColorPrimary" />

        <TextView
            android:id="@+id/tv_device_name"
            style="@style/MyBodyText.Primary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/poppins_bold"
            android:text="VIVO T1"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/iv_chat_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_timestamp"/>

        <TextView
            android:id="@+id/tv_message_preview"
            style="@style/MyBodyText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Hello thanks for finding my VIVO T1 Plea..."
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@id/iv_chat_icon"
            app:layout_constraintTop_toBottomOf="@id/tv_device_name"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_timestamp"
            style="@style/MyBodyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11:42 am"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_device_name"
            app:layout_constraintBottom_toBottomOf="@id/tv_device_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>