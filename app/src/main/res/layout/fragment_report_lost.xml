<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue_app_background"
    android:fillViewport="true"
    tools:context=".fragments.ReportLostFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="48dp">

        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Go back"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/image_view_warning_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/ic_warning"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/text_view_title"
            style="@style/MyScreenTitle"
            android:layout_marginTop="16dp"
            android:text="Report A Lost Device"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_view_warning_icon" />

        <TextView
            android:id="@+id/text_view_description"
            style="@style/MyBodyText.White.Center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="48dp"
            android:text="Enter the unique ID of your device to mark it as lost. This will activate location tracking via the network."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_title" />

        <TextView
            android:id="@+id/text_view_device_info_title"
            style="@style/MySectionTitle"
            android:layout_marginTop="48dp"
            android:text="Device Information"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_description" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_device_id"
            style="@style/MyTextInputLayout"
            android:layout_marginTop="16dp"
            android:hint="Enter Your Device ID"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColorHint="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/text_view_device_info_title">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_device_id"
                style="@style/MyTextInputEditText"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/button_mark_as_lost"
            style="@style/MyPrimaryButton"
            android:layout_marginTop="24dp"
            android:text="Mark As Lost"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_layout_device_id" />


        <TextView
            android:id="@+id/text_view_what_happens_title"
            style="@style/MySectionTitle"
            android:layout_marginTop="48dp"
            android:text="What happens next"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_mark_as_lost" />

        <TextView
            android:id="@+id/text_view_what_happens_description"
            style="@style/MyBodyText.White.Center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="48dp"
            android:text="Your device will be added to our network's watchlist. When other FindMyNet users come within range, they'll anonymously report its location to help you find it."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_what_happens_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>