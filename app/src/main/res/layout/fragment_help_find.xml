<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue_app_background"
    android:fillViewport="true"
    tools:context=".fragments.HelpFindFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="48dp">

        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Go back"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/image_view_broadcast_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/ic_beacon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/text_view_title"
            style="@style/MyScreenTitle"
            android:layout_marginTop="16dp"
            android:text="Help Find Device"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_view_broadcast_icon" />

        <TextView
            android:id="@+id/text_view_description"
            style="@style/MyBodyText.White.Center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="48dp"
            android:text="Help others by turning your device into a scanner. If you find a lost device, its location will be anonymously reported to the owner."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_title" />

        <TextView
            android:id="@+id/text_view_scanner_title"
            style="@style/MySectionTitle"
            android:layout_marginTop="48dp"
            android:drawablePadding="8dp"
            android:text="Network Scanner"
            app:drawableStartCompat="@drawable/ic_search"
            app:drawableTint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_description" />

        <Button
            android:id="@+id/button_start_scanning"
            style="@style/MyPrimaryButton.WithIcon"
            android:layout_marginTop="16dp"
            android:text="Start Scanning"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_scanner_title" />

        <TextView
            android:id="@+id/text_view_status"
            style="@style/MyBodyText"
            android:layout_width="315dp"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/status_box_background"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Your device is not currently scanning"
            app:drawableTint="@color/dark_grey_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_start_scanning" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:background="@drawable/privacy_box_background"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_status">

            <ImageView
                android:id="@+id/image_view_lock_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_lock"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/text_view_privacy_title"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/text_view_privacy_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Privacy Protected"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/image_view_lock_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_view_privacy_description"
                style="@style/MyBodyText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="All scanning is completely anonymous. Device locations are encrypted and only shared with verified owners. Your personal information is never collected or stored."
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_privacy_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="21dp"
            android:layout_height="22dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_view_status"
            app:layout_constraintEnd_toEndOf="@+id/text_view_status"
            app:layout_constraintHorizontal_bias="0.958"
            app:layout_constraintStart_toStartOf="@+id/text_view_status"
            app:layout_constraintTop_toTopOf="@+id/text_view_status"
            app:layout_constraintVertical_bias="0.441"
            app:srcCompat="@drawable/ic_wifi" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>